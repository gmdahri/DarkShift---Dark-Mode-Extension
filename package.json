{
  "name": "dark-mode-extension",
  "version": "1.0.0",
  "description": "A Chrome extension to convert any webpage into dark mode",
  "type": "module",
  "scripts": {
    "dev": "vite build --watch",
    "build": "tsc && npm run build:popup && npm run build:content && npm run build:background && npm run copy-files",
    "build:popup": "vite build",
    "build:content": "npx esbuild src/content/content.ts --bundle --outfile=dist/content.js --format=iife",
    "build:background": "npx esbuild src/background/background.ts --bundle --outfile=dist/background.js --format=iife",
    "copy-files": "node scripts/copy-files.js",
    "preview": "vite preview",
    "sync-landing": "bash scripts/sync-landing-page.sh"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@rollup/plugin-inject": "^5.0.5",
    "@types/chrome": "^0.0.251",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "esbuild": "^0.27.0",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.3.6",
    "typescript": "^5.2.2",
    "vite": "^5.0.8"
  }
}
